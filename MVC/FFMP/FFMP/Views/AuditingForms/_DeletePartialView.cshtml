@model FFMP.Data.AuditingForm

@{
    ViewData["Title"] = "Delete";
}
<div class="modal fade" id="deleteAF-@Model.AuditingId" aria-labelledby="DeleteAFLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAFLabel">Delete Form</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
                <form asp-action="Delete" asp-route-id="@Model.AuditingId" data-id="@Model.AuditingId">
                    <input type="hidden" asp-for="AuditingId" />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

