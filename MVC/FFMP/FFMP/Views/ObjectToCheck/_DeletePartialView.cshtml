@model FFMP.Data.ObjectToCheck

@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="deleteObject-@Model.Id" aria-labelledby="DeleteObjectLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteObjectLabel">Delete object</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?</p>
                <form asp-action="Delete" asp-route-id="@Model.Id" data-id="@Model.Id">
                    <input type="hidden" asp-for="Id" />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>