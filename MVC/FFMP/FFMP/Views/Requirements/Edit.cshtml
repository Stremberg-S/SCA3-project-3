@model FFMP.Data.Requirement

@{
    ViewData["Title"] = "Edit";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_Navbar");
    }
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

<h1>Edit</h1>

<h4>Requirement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReqId" />
            <div class="form-group" style="display:none;">
                <label asp-for="AuditingAuditingId" class="control-label"></label>
                <select asp-for="AuditingAuditingId" class="form-control" asp-items="ViewBag.AuditingAuditingId"></select>
                <span asp-validation-for="AuditingAuditingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Must" />Mandatory
                </label>
            </div>
            <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <input onclick="history.back()" type="button" value="Back" class="btn btn-info" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-controller="AuditingForms" asp-route-id=@Model.AuditingAuditingId></a>
</div>

