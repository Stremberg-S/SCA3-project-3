@model FFMP.Data.User
@{
    ViewData["Title"] = "Login";
}

<div class="center2">
    <form asp-action="Login" asp-route-login="@Model?.Login" asp-route-password="@Model?.Password">
        <div class="input-wrapper">
            <input asp-for="Login" class="form-control" placeholder="Username" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="input-wrapper">
            <input asp-for="Password" id="password" class="form-control" type="password" placeholder="Password" />
            <div class="input-icon" id="icon" onclick="togglePassword()">
                <img src="data:image/svg+xml;base64,">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="input-wrapper">
            <input type="submit" value="Login" class="btn btn-primary" />
            <div>
                @ViewBag.Message
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
    <script type="text/javascript">
                            function preventBack() {window.history.forward(); }
                            setTimeout("preventBack()", 0);
                            window.onunload = function() { null };
    </script>
    }
    }