@model FFMP.Data.User

<div class="modal fade" id="editFAdmin-@Model.Login" aria-labelledby="EditUserLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editFAdminLabel">Edit information</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-route-id="@Model.Login" data-id="@Model.Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Login" />
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>          
                    <div class="form-group" style="display:none">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display: none">
                        <label asp-for="Created" class="control-label"></label>
                        <input asp-for="Created" class="form-control" />
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display: none">
                    <label asp-for="LastLogin" class="control-label"></label>
                    <input asp-for="LastLogin" class="form-control" />
                    <span asp-validation-for="LastLogin" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display: none">
                        <label asp-for="Admin" class="control-label"></label>
                        @*<input asp-for="Admin" class="form-control" />*@
                        <select asp-for="Admin" id="selectAdTF" class="form-control">
                            <option value="True">True</option>
                            <option value="False">False</option>
                        </select>
                        <span asp-validation-for="Admin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Active" class="control-label"></label>
                        @*<input asp-for="Active" class="form-control" />*@
                        <select asp-for="Active" id="selectAcTF" class="form-control">
                            <option value="True">True</option>
                            <option value="False">False</option>
                        </select>
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                     <div>
                      
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>